<%- include("header") %>

<div class="background">
	
</div>


<div class="container" style="margin-top:70px">
	<div class="container" >	
			<% if(error && error.length>0){  %>
			<div class="alert alert-danger" role="alert">
				<%= error %>
			</div>
			<% } %> 
			<% if(success && success.length>0){  %>
			<div class="alert alert-success" role="alert">
				<%= success %>
				<% } %>
			</div>
	</div>
	<div class="row justify-content-center text-center loginbox">
    	<h1 class=" mb-3 ">Login</h1>
	</div>
	<div class="row justify-content-center">
    	<div class="col-10 col-sm-5 col-lg-3 loginBox">
        	<form action="/login" method="post">
            	<div class="form-group">
					 <i class="fas fa-user ml-3"></i>
                	<input class="textBox" type="text" name="username" placeholder="username">
            	</div>
           		<div class="form-group">
					<i class="fas fa-lock ml-3"></i>
                	<input class="textBox" type="password" name="password" placeholder="password">
            	</div>
            	<div class="form-group">
                	<button class="btn btn-md btn-outline-primary btn-block ml-3 loginButton">Login</button>
            	</div>
        	</form>
		</div>
	</div>
	<div class="row justify-content-center zoom">	
		<div class="mr-5 mr-lg-5">
			<a href="/forgot">Forgot password</a>
		</div>
		<div class="ml-5">
			<a href="/">Go Back</a>
		</div>			
	</div>
	<div class="row justify-content-center">
		<p class="mt-2 ml-2">
			New User  <a href="/register"> Sign Up!</a>
		</p>
			
	</div>
</div>


<%- include("footer") %>
<%- include("header") %>

<div class="background">
	
</div>


<div class="container" style="margin-top:70px">
	<div class="container" style="display:block">
			<% if(error && error.length>0){  %>
			<div class="alert alert-danger" role="alert">
				<%= error %>
			</div>
			<% } %> 
			<% if(success && success.length>0){  %>
			<div class="alert alert-success" role="alert">
				<%= success %>
				<% } %>
			</div>
	</div>	
	<div class="row justify-content-center loginbox">
    	<h1 class="mb-3 text-center">Sign Up</h1>
	</div>
	<div class="row justify-content-center loginbox">
    	<div class="col-10 col-sm-5  col-lg-3">
        	<form action="/register" method="post">
            	<div class="form-group">
					 <i class="fas fa-user ml-3"></i>
                	<input class="textBox" type="text" name="username" placeholder="create username">
            	</div>
            	<div class="form-group">
					<i class="fas fa-lock ml-3"></i>
                	<input class="textBox" type="password" name="password" placeholder="create password">
            	</div>
			 	<div class="form-group">
					<i class="fa fa-envelope ml-3" aria-hidden="true"></i>
                	<input class="textBox" type="email" name="email" placeholder="user@mail.com">
            	</div>
            	<div class="form-group">
                	<button class="btn btn-md btn-outline-primary btn-block loginButton ml-3">Sign Up!</button>
            	</div>
        	</form>
        	<a href="/">Go Back</a>
    	</div>
	</div>
</div>


<%- include("footer") %>
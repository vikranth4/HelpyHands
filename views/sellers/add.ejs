<%- include("../header") %>

<div class="background">
	
</div>


<div class="container" style="margin-top:70px">

	<div class="row justify-content-center text-center loginbox">
    	<h1 class=" mb-3 ">Add products</h1>
	</div>
	<div class="row justify-content-center">
    	<div class="col-10 col-sm-5 col-lg-3 loginBox">
        	<form action="/seller/<%=seller._id%>/add" method="post">
            	<div class="form-group">
					 
                	<input class="textBox" type="text" name="name" placeholder="Product name">
            	</div>
           		<div class="form-group">	
                	<input class="textBox" type="text" name="image" placeholder="product image">
                </div>
                <div class="form-group">
					<input class="textBox" type="number" name="price" placeholder="price" step="10">
            	</div>
            	<div class="form-group">
                	<button class="btn btn-md btn-outline-primary btn-block ml-3 loginButton">Add</button>
            	</div>
        	</form>
		</div>
	</div>
	<div class="row justify-content-center zoom">	
		<div class="ml-5">
			<a href="/">Go Back</a>
		</div>			
	</div>
</div>


<%- include("../footer") %>
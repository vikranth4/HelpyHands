<%- include("../header") %>

<div class="background">
	
</div>


<div class="container" style="margin-top:70px">

	<div class="row justify-content-center text-center loginbox">
    	<h1 class=" mb-3 ">Create Seller</h1>
	</div>
	<div class="row justify-content-center">
    	<div class="col-10 col-sm-5 col-lg-3 loginBox">
        	<form action="/sellers" method="post">
            	<div class="form-group">
					 <i class="fas fa-user ml-3"></i>
                	<input class="textBox" type="text" name="username" placeholder="username">
            	</div>
           		<div class="form-group">
					<i class="fas fa-lock ml-3"></i>
                	<input class="textBox" type="text" name="code" placeholder="Secret code">
                </div>
                <div class="form-group">
					<label for="category">Choose a category:</label>
                        <select name="category" id="category">
                            <option value="groceries">Groceries</option>
                            <option value="fruits">Fruits and vegetables</option>
                            <option value="meat">Meat</option>
                            <option value="fish">Fish</option>
                        </select>
            	</div>
            	<div class="form-group">
                	<button class="btn btn-md btn-outline-primary btn-block ml-3 loginButton">Create</button>
            	</div>
        	</form>
		</div>
	</div>
	<div class="row justify-content-center zoom">	
		<div class="ml-5">
			<a href="/">Go Back</a>
		</div>			
	</div>
</div>


<%- include("../footer") %>